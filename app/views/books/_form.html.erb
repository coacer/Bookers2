<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <p class="error"><%= message %></p>
  <% end %>
<% end %>
<h2>New book</h2>
<%= form_for book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: "book_title" %><br>
  <%= f.label :opinion %><br>
  <%= f.text_area :opinion, class: "book_body" %><br>
  <%= f.submit "Create Book", class: "btn btn-primary" %>
<% end %>
