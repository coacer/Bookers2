<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <p class="error"><%= message %></p>
  <% end %>
<% end %>
<%= form_for @book do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :opinion %><br>
  <%= f.text_area :opinion %><br>
  <%= f.submit "Update Book", class: "btn btn-primary", style: "display: block;" %>
<% end %>
