<h2>User info</h2>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <p class="error"><%= message %></p>
  <% end %>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "name" %><br>
  <%= f.label :profile_image, "Image" %>
  <%= f.attachment_field :profile_image, class: "user_image" %><br>
  <%= f.label :introduction %>
  <%= f.text_area :introduction, class: "introduction" %><br>
  <%= f.submit "Update User" %>
<% end %>
